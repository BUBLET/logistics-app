digraph LogisticsContract {
	rankdir=TB size=12
	Sender [label="Sender (Отправитель)" fillcolor=lightblue shape=ellipse style=filled]
	Recipient [label="Recipient (Получатель)" fillcolor=lightblue shape=ellipse style=filled]
	Contract [label="Logistics Smart Contract" fillcolor=lightgray shape=box style=filled]
	AddOrder [label="addOrder()" shape=box]
	PayOrder [label="payForOrder()" shape=box]
	CompleteOrder [label="completeOrder()" shape=box]
	CancelOrder [label="cancelOrder()" shape=box]
	Withdraw [label="withdrawCompanyFunds()" shape=box]
	Review [label="Review System" fillcolor=yellow shape=diamond style=filled]
	OrderAdded [label=OrderAdded fillcolor=orange shape=ellipse style=filled]
	OrderPaid [label=OrderPaid fillcolor=orange shape=ellipse style=filled]
	OrderCompleted [label=OrderCompleted fillcolor=orange shape=ellipse style=filled]
	OrderCancelled [label=OrderCancelled fillcolor=orange shape=ellipse style=filled]
	ReviewAdded [label=ReviewAdded fillcolor=orange shape=ellipse style=filled]
	Sender -> AddOrder
	AddOrder -> Contract
	AddOrder -> OrderAdded
	Sender -> PayOrder
	PayOrder -> Contract
	PayOrder -> OrderPaid
	Recipient -> CompleteOrder
	CompleteOrder -> Contract
	CompleteOrder -> OrderCompleted
	CompleteOrder -> Review
	Review -> ReviewAdded
	Sender -> CancelOrder
	CancelOrder -> Contract
	CancelOrder -> OrderCancelled
	Contract -> Withdraw
}
